<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:screenOrientation="landscape"
    android:orientation="horizontal"
    android:background="#ffffff"
    tools:context="no.uio.ifi.viettt.mscosa.DatabaseVisualisationActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:layout_height="match_parent"
        android:background="#d6d6d0">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="0.2"
            android:layout_height="0dp">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:text="Sensour Source"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rdBtnSource"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:checked="true" />

                <RadioButton
                    android:text="Patient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rdBtnPatient"
                    android:layout_weight="1"
                    android:textSize="12sp" />

                <RadioButton
                    android:text="Clinic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rdBtnClinic"
                    android:layout_weight="1"
                    android:textSize="12sp" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="0.1"
            android:layout_height="0dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txtSearchRP"
                android:hint="Your key search"
                android:textSize="10sp"
                android:imeOptions="actionDone"
                android:textAlignment="viewStart" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </TableLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#6c6c6c">

            <TextView
                android:text="From"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/lblFrom"
                android:layout_weight="0.1"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textStyle="normal|bold" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txtFrom"
                android:layout_weight="0.3"
                android:textSize="12sp"
                android:hint="Min second"
                android:imeOptions="actionNext"
                android:nextFocusDown="@+id/txtTo" />

            <TextView
                android:text="To"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/lblTo"
                android:layout_weight="0.1"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textStyle="normal|bold" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txtTo"
                android:layout_weight="0.3"
                android:textSize="12sp"
                android:hint="Max second"
                android:imeOptions="actionDone"/>

            <Button
                android:text="Apply"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tbnApply"
                android:layout_weight="0.2"
                android:textSize="12sp"
                android:gravity="center" />

        </LinearLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/lineChartRP"
            android:layout_weight="0.8">
        </com.github.mikephil.charting.charts.LineChart>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#6c6c6c">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/selectChannelRP"
                    android:text="Select channels"
                    android:gravity="center"
                    android:layout_weight="0.6"
                    android:textSize="12sp" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:drawable/ic_media_play"
                    android:background="#AAA9B1"
                    android:id="@+id/btnPlayRP"
                    android:layout_weight="0.2"
                    android:layout_marginEnd="3dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:drawable/checkbox_off_background"
                    android:background="#AAA9B1"
                    android:id="@+id/btnStopRP"
                    android:layout_weight="0.2"
                    android:layout_marginEnd="3dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/txtAnnRP"
                    android:hint="Write annotation"
                    android:gravity="center"
                    android:layout_weight="0.6"
                    android:textSize="12sp"
                    android:imeOptions="actionDone"/>

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:drawable/star_big_on"
                    android:background="#AAA9B1"
                    android:id="@+id/btnAddAnnRP"
                    android:layout_weight="0.2"
                    android:layout_marginEnd="3dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:drawable/ic_menu_save"
                    android:background="#AAA9B1"
                    android:id="@+id/btnSaveAnnRP"
                    android:layout_weight="0.2"
                    android:layout_marginEnd="3dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
